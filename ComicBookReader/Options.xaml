<Window x:Class="NananananaCBR.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="80" Width="700"
        MinHeight="80" MaxHeight="80" MaxWidth="700" MinWidth="700" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="114*"/>
            <ColumnDefinition Width="303*"/>
            <ColumnDefinition Width="275*"/>
        </Grid.ColumnDefinitions>
        <Label Margin="5" Content="Library Directory:"/>
        <TextBox Grid.Column="1" Margin="5" Name="LibraryDirectory" Height="30" MaxHeight="30" IsReadOnly="True"/>
        <Button Grid.Column="2" Margin="5" Content="Browse" Click="Button_Click"/>
    </Grid>
</Window>
